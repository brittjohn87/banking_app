<h1>Welcome to Your Dashboard, <%= current_user.first_name %></h1>
<p>Here are a list of your accounts:</p>

<table class="table">
  <thead>
    <tr>
    	<th>Account Type</th>
    		<% if current_user.role == 'admin' %>
	    		<th>First Name</th>
	    		<th>Last Name</th>
    		<% end %>
      <th>Account Number</th>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
      	<td><%= account.account_type %></td>
      		<% if current_user.role == 'admin' %>
	      		<td><%= account.user.first_name %></td>
	      		<td><%= account.user.last_name %></td>
      		<% end %>
        <td><%= account.id %></td>
        <td><%= number_to_currency account.balance %></td>
        <td><%= link_to 'Show', account %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
	<p><%= link_to 'Open a New Account', new_account_path, class: 'btn btn-success' %></p>
</div>